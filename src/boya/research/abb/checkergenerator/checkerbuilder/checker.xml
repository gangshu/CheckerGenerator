<checkers version="1.3">
    <categories>
        <category name="C and C++">
            <category name="Custom checkers">
                <error id="<CheckerName>"/>
            </category>
        </category>
    </categories>

    <checkergroup id="<CheckerName>" language="C/C++" api="path">
        <checker id="<CheckerName>">
            <error
                    id="<CheckerName>"
                    message="<CheckerMessage>"
                    title="<CheckerTitle>"
                    severity="1"
                    enabled="true"/>
        </checker>
    </checkergroup>
</checkers>
